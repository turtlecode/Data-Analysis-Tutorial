
import pandas as pd

# Read the CSV file once
df = pd.read_csv("MOCK_DATA.csv")

# Example 1: Preview first rows
print("Example 1: First 5 rows")
print(df.head())
print("-" * 50)

# Example 2: Shape and columns
print("Example 2: Shape and Columns")
print("Rows, Columns:", df.shape)
print("Columns:", df.columns)
print("-" * 50)

# Example 3: Data types
print("Example 3: Data Types")
print(df.dtypes)
print("-" * 50)

# Example 4: Single column (salary)
print("Example 4: Salary column")
print(df["salary"].head())
print("-" * 50)

# Example 5: Multiple columns (first_name and salary)
print("Example 5: First name and Salary columns")
print(df[["first_name", "salary"]].head())
print("-" * 50)

# Example 6: Salary statistics
print("Example 6: Salary description")
print(df["salary"].describe())
